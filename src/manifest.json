{
    "manifest_version": 3,
    "name": "Auto Suggest Assistant",
    "version": "1.0",
    "description": "A universal writing assistant that appears whenever you type in any textbox element, using n-gram algorithm to generate next possible words.",
    "author": "Izyne Gallardo & Eleina Sta. Ana",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": ["src/scripts/content.js"],
        "css": ["src/assets/css/content.css"],
        "run_at": "document_idle"
        }
    ],

    "action": {
        "default_popup": "src/html/popup.html",
        "default_title": "Auto Suggest Assistant"
    },

    "web_accessible_resources": [
        {
        "resources": [
            "src/assets/css/*.css",
            "src/icons/*"
        ],
        "matches": ["<all_urls>"]
        }
    ]
}