{
    "manifest_version": 3,
    "name": "TypeCast",
    "version": "1.0",
    "description": " Suggest and predict word powered by n-grams. Make your typing and writing faster and accuracy anywhere.",
    "author": "Izyne Gallardo & Eleina Sta. Ana",
    "icons":{
        "16": "extension/icons/typecast.png",
        "48": "extension/icons/typecast.png",
        "128": "extension/icons/typecast.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "http://127.0.0.1:8000/*"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["extension/scripts/content.js"],
        "run_at": "document_idle"
    }],
    "background": {
        "service_worker": "extension/scripts/background.js"
    },
    "action": {
        "default_popup": "extension/html/popup.html",
        "default_title": "Auto Suggest Assistant",
        "default_icon": {
            "16": "extension/icons/typecast.png",
            "48": "extension/icons/typecast.png",
            "128": "extension/icons/typecast.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "extension/styles/*.css",
                "extension/scripts/*",
                "extension/icons/*"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}